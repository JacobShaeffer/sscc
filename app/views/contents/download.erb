<div class="col">
  <%= link_to "Download Metadata Spreadsheet", download_spreadsheet_contents_path, class: "btn btn-primary" %>
  <%= link_to "Create New Content Zip", create_download_contents_path, class: "btn btn-primary" %>
</div>
<div style="margin-top: 15px;">
  <h3>Finished Jobs</h3>
  <% @filenames.each do |filename| %>
      <p>
      <%= link_to filename, download_zip_contents_path(filename: filename) %>
      <%= link_to 'delete', delete_download_contents_path(filename: filename), style: "color: red;"%>
      </p>
  <% end %>

  <h3>Running Jobs</h3>
  <table style="border: 1px solid black;">
    <thead>
        <tr>
            <th style="border: 1px solid black;">Job ID</th>
            <th style="border: 1px solid black;">Start Time</th>
        </tr>
    </thead>
    <tbody>
    <% if @jobs %>
      <% @jobs.each do |job| %>
        <tr>
          <td style="border: 1px solid black;"><%= job[0] %></td>
          <% if job[1] %>
          <td style="border: 1px solid black;"><%= job[1].strftime('%m-%d-%y %H:%M') %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>