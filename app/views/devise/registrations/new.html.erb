<div class="join-page">
  <div class="hero-section">
    <div class="overlay"></div>
    <div class="content-wrapper">
      <h1 class="text-white text-center">Welcome to ASU SolarSPELL Content Curation</h1>
    </div>
  </div>

  <div class="container form-section">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="card join-form">
          <div class="card-body">
            <h2 class="text-center fw-bold">Create Account</h2>
            <%= form_with url: user_registration_path, method: :post, class: "mt-4" do |f| %>
              <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label" %>
                <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :first_name, "First Name", class: "form-label" %>
                <%= f.text_field :first_name, placeholder: "Enter your first name", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :last_name, "Last Name", class: "form-label" %>
                <%= f.text_field :last_name, placeholder: "Enter your last name", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :password, "Password (6 characters minimum)", class: "form-label" %>
                <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
              </div>
              <div class="mb-4">
                <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
                <%= f.password_field :password_confirmation, placeholder: "Confirm your password", class: "form-control" %>
              </div>
              <div class="d-grid">
                <%= f.submit "Sign Up", class: "btn btn-primary" %>
              </div>
            <% end %>
            <div class="text-center mt-3">
              <small>Already have an account? <%= link_to "Login", new_user_session_path, class: "text-primary" %></small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>