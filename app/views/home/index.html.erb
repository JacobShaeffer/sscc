<!-- Hero Section -->
<div class="hero-section px-5 py-4 rounded-3">
  <div class="container-fluid text-center position-relative">
    <!-- Wrapper for content (GIF and Heading) -->
    <div class="content-wrapper">
      <!-- Add GIF on the left side -->
      <div class="gif-container">
        <%= image_tag 'Spelly_Waving.gif', alt: 'Fun GIF', class: 'img-fluid' %>
      </div>
      <!-- Main heading on the right side -->
      <h1 class="display-6 fw-bold text-white">
        Welcome to ASU SolarSPELL <br> Content Curation
      </h1>
    </div>
  </div>
</div>


<!-- Getting Started Section -->
<div class="container-fluid mt-5 getting-started-section">
  <div class="row">
    <div class="col-md-12 text-start">
      <h2 class="fw-bold text-dark">Getting Started</h2>
      <p class="lead text-dark">
        In order to meet the global need for credible, relevant information, the ASU SolarSPELL Initiative relies on people like you to help us curate and tag shareable content. Scroll down to learn how to get started!
      </p>
    </div>
  </div>
</div>


<!-- Yellow Background Section for Boxes -->
<div class="yellow-section">
  <div class="container">
    <div class="row justify-content-center">
      <!-- Content Block -->
      <div class="col-lg-4 col-md-6 mb-3">
        <div class="card text-center yellow-box">
          <div class="card-body d-flex flex-column justify-content-center">
            <%= image_tag 'Content-pana 1.png', alt: 'Content Icon', class: 'img-fluid mb-3' %>
            <div class="box-title bg-warning text-center mb-3">
              <h3 class="card-title text-black">Content</h3>
            </div>
            <ul class="text-left">
              <li>Submit & tag new content.</li>
              <li>View or edit content that has already been submitted & tagged.</li>
            </ul>
            <button class="btn btn-primary mt-auto">Get Started</button>
          </div>
        </div>
      </div>

      <!-- Metadata Block -->
      <div class="col-lg-4 col-md-6 mb-3">
        <div class="card text-center yellow-box">
          <div class="card-body d-flex flex-column justify-content-center">
            <%= image_tag 'Developer activity-bro 1.png', alt: 'Metadata Icon', class: 'img-fluid mb-3' %>
            <div class="box-title bg-warning text-center mb-3">
              <h3 class="card-title text-black">Metadata</h3>
            </div>
            <ul class="text-left">
              <li>View metadata tags that have already been used.</li>
              <li>Edit or update metadata information for content.</li>
            </ul>
            <button class="btn btn-primary mt-auto">Get Started</button>
          </div>
        </div>
      </div>

      <!-- Copyright Block -->
      <div class="col-lg-4 col-md-6 mb-3">
        <div class="card text-center yellow-box">
          <div class="card-body d-flex flex-column justify-content-center">
            <%= image_tag 'At the office-bro 1.png', alt: 'Copyright Icon', class: 'img-fluid mb-3' %>
            <div class="box-title bg-warning text-center mb-3">
              <h3 class="card-title text-black">Copyright Permission Requests</h3>
            </div>
            <ul class="text-left">
              <li>View or edit copyright permission information for organizations we have already contacted.</li>
              <li>Document new organizations youâ€™ve contacted for permission to share their content.</li>
            </ul>
            <button class="btn btn-primary mt-auto">Get Started</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Footer Section -->
<div class="container-fluid">
  <!-- Top Section with Image and Information -->
  <div class="row align-items-center p-4 footer-top">
    <!-- Left Image Section (1/3 of the width) -->
    <div class="col-lg-4 col-md-12">
      <%= image_tag 'Footer_Image.png', alt: 'SolarSPELL Initiative', class: 'img-fluid rounded', style: 'max-width: 300px;' %>
    </div>

    <!-- Right Information Section (2/3 of the width) -->
    <div class="col-lg-8 col-md-12 text-white">
      <h2 class="fw-bold">What is the SolarSPELL Initiative?</h2>
      <p>The ASU SolarSPELL Initiative empowers offline communities globally by providing localized libraries and building 21st century skills that people need to make informed decisions, increase their self-reliance, and improve their quality of life.</p>
      <p>Thanks to help from students, volunteers, and community partners, our library collections contain more than 45,000 multimedia resources, and counting!</p>
      <a href="#" class="learn-more-link text-white float-end">Learn more about SolarSPELL</a>
    </div>
  </div>

  <!-- Bottom Section (Footer Logo and Links) -->
  <div class="row footer-bottom p-4">
    <div class="col-lg-6 col-md-12 text-left d-flex align-items-center">
      <!-- Display both logos side by side -->
      <%= image_tag 'image 4.png', alt: 'SolarSPELL Logo', class: 'img-fluid logo me-3' %>
    </div>

    <div class="col-lg-6 col-md-12 text-right footer-links d-flex justify-content-end align-items-center">
      <!-- Display the footer links -->
      <a href="#" class="footer-link me-3">SPELL-CC</a>
      <a href="mailto:email@example.com" class="footer-link">Email</a>
    </div>
  </div>
</div>
